<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linera_layout"
    tools:context=".Activitys.GetRetrofitdog">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_retrofit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/colorTextoGeneral"
        android:elevation="4dp"
        android:iconTint="#ffffff"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.DayNight.Dialog.Alert"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBreed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        app:queryHint="Escribe una raza de perro "/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_dog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>